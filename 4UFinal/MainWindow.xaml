                <TextBlock x:Name="DialogueName" Height="24" Canvas.Left="170" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="21" Width="590" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Georgia" FontSize="20" Foreground="#FFFFC500"/>
            </Canvas>
            <Canvas x:Name="Stage" Height="550" Canvas.Left="25" Canvas.Top="25" Width="950" Background="White" Visibility="Visible">
            </Canvas>
            <Rectangle x:Name="NSButton" Height="61" Canvas.Top="515" Width="950" Canvas.Left="25" MouseLeftButtonDown="NSButton_MouseDown" MouseLeftButtonUp="MouseButtonUp" Cursor="ScrollS">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
